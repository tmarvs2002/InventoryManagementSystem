{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@core/*": [
        "./src/libs/core/*"
      ],
      "@aws/*": [
        "./src/libs/aws/*"
      ],
      "@public/*": [
        "./public/*"
      ],
      "@layout/*": [
        "./src/layout/*"
      ],
      "@auth/*": [
        "./src/libs/auth/*"
      ],
      "@mail/*": [
        "./src/libs/mail/*"
      ],
      "@session/*": [
        "./src/libs/session/*"
      ]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "build/types/**/*.ts"],
  "exclude": ["node_modules"]
}
